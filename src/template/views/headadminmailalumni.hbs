<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Alumni Details</title>
    <style>
        body {
            background-color: #121212;
            color: white;
        }

        .table-container {
            overflow-x: auto;
            background-color: #212529;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

        table {
            width: 100%;
            min-width: 600px;
        }

        th,
        td {
            padding: 10px;
            text-align: center;
            border: 1px solid #444;
        }

        th {
            background-color: #343a40;
        }

        .profile-pic {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }

        .message-container {
            margin-top: 20px;
            background-color: #212529;
            padding: 20px;
            border-radius: 10px;
        }

        textarea {
            width: 100%;
            height: 150px;
            resize: none;
            background-color: #343a40;
            color: white;
            border: 1px solid #444;
            padding: 10px;
            border-radius: 5px;
        }

        .btn-send {
            display: block;
            width: 100%;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <div class="table-container">
            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Profile Pic</th>
                        <th>Batch</th>
                        <th>Branch</th>
                        <th>Email</th>
                        <th>Mobile No</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{name}}</td>
                        <td><img src="../../{{profileimg}}" alt="Profile" class="profile-pic"></td>
                        <td>{{batch}}</td>
                        <td>{{branch}}</td>
                        <td>{{mailid}}</td>
                        <td>{{mobno}}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form action="/headadmin/mailalumni/{{rollno}}" method="POST">
            <div class="message-container">
                <h5>Type Your Message</h5>
                <textarea name="message" placeholder="Enter your message here..." required></textarea>
                <button type="submit" class="btn btn-primary btn-send">Send Message</button>
            </div>
            <div id="messages">
                {{#if success}}
                <div id="success" class="alert alert-success">{{success}}</div>
                <script>
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                </script>
                {{/if}}

                {{#if warn}}
                <div id="warn" class="alert alert-warning">{{warn}}</div>
                <script>
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                </script>
                {{/if}}
            </div>

        </form>
    </div>
</body>

</html>

<script>
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }
</script>